@model SeminarInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body>
    <h1> Thank you, @Model.Name!</h1>
    <div>
        @if (Model.WillAttend == true)
        {
            @:It's great that you're coming for seminar. Your seat is reserved.
        }
        else
        {
            @: Sorry to hear that you can't make it, but thanks for letting us know.
        }
    </div>
</body>
</html>
